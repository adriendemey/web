block body
    .row.content.vanilla
        .large-8.columns.article
            if subtitle
                h1.with-subtitle= title
                h2.subtitle= subtitle
            else
                h1.no-subtitle= title

            div.body!= contents

            //- DISQUS
            //-
            //- Usamos el mismo Disqus para los dos idiomas, si se
            //- quieren tener los comentarios separados por idiomas
            //- hay que meter el idioma en "disqus_identifier".
            //-
            //- app.request.locale

            if allow_comments
                hr
                #disqus_thread.comments
                script.
                    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                    var disqus_shortname  = 'grautonomia'; // required: replace example with your forum shortname
                    var disqus_identifier = '{{ data._id }}';
                    var disqus_title      = '{{ data.get('title', 'ca') }}';
                    var disqus_url        = '{{ url(data._id~'_ca') }}';
                    var disqus_config     = function () {
                        var locales = {
                            'ca': 'ca_ES',
                            'es': 'es_ES'
                        };

                        this.language = locales["{{ app.request.locale }}"];
                    };

                    /* * * DON'T EDIT BELOW THIS LINE * * */
                    (function() {
                        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                noscript Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments</a>.

            //- /DISQUS

