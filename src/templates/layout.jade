doctype html
html(lang="#{locale}")
    head
        meta(charset="utf-8")
        meta(name="author" content="Asier Illarramendi")
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        title #{title} – #{__('gra_full')} (GRA)
        //- link(rel="alternate" type="application/rss+xml" title="RSS" href="http://doup.illarra.com/rss.xml")
        link(href="/#{fingerprint['assets/main.css']}" rel="stylesheet" type="text/css")
        link(href="http://fonts.googleapis.com/css?family=Domine:400,700|Roboto:400,400italic,700italic,700,500,500italic,300,300italic,900,100italic,100,900italic" rel="stylesheet" type="text/css")

    body(class="")
        //- FACEBOOK
        //-#fb-root
        //-script.
            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));

        .header
            .row
                .large-12.columns
                    h1.title: a(href='/'+findOne({ id: 'index' }).altFiles[locale].path) GRA
                    ul.locales
                        if locale != 'es'
                            li: a(href="/#{altFiles.es.path}") Castellano
                        if locale != 'ca'
                            li: a(href="/#{altFiles.ca.path}") Català
                    ul.menu
                        li: a(href='/'+findOne({ id: 'index' }).altFiles[locale].path)= __('menu_index')
                        li: a(href="#" data-reveal-id="aboutModal" data-track='{ "category": "about", "action": "view" }')= __('menu_about')

        block body

        //-.footer
            .row
                .large-6.columns
                    div
                        a(href="http://democraciainclusiva.org/phplist/" target="_blank" class="secondary small radius button wide")= __('subscribe_news')
                    .row
                        .large-6.columns
                            p= __('footer.contact')
                            p: a(href="mailto:gra@pimienta.org") gra@pimienta.org
                        .large-6.columns
                            p!= __('footer.cc')
                .large-6.columns.latest
                    p= __('last_articles') + ':'
                    ul
                        each article in find({ locale: locale, type: 'article' }).sort({ date: -1 }).limit(7).all()
                            li: a(href=article.path) &raquo; #{article.title} (#{prettyDate(article.date)})
            .row.foot
                .large-12.columns
                    p 2012–#{(new Date()).getFullYear()}, Barcelona, #{__('gra_full')}

        //-#aboutModal.small.reveal-modal.about-modal
            a.close-reveal-modal &#215;
            h3= __('menu_about')
            div!= __('gra_intro')

        script(src="/#{fingerprint['assets/main.min.js']}")
