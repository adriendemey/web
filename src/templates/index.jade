extends ./layout.jade

block body
    .row.homepage
        .large-12.columns
            .intro
                h1= __('gra_full')
                img.bird(src='/assets/bird.png')

            ul.articles.large-block-grid-3
                each article in collections.articles
                    if locale == article.locale
                        li.article
                            h3: a(href='/'+article.path)= article.title
                            p.date= __('published_at', prettyDate(article.date))
                            p!= article.snippet
                                a.more(href='/'+article.path) #{__('more')} &raquo;
